<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p1wall">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginStart="190dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:text="Cloud Manager">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginStart="65dp">

        <ImageView
            android:id="@+id/client_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/white_button">
        </ImageView>

        <Button
            android:id="@+id/add_cli_button"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:text="ADD NEW">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/products_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/white_button_products">
        </ImageView>

        <Button
            android:id="@+id/add_p_button"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:text="ADD NEW">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sales_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/white_button_sales">
        </ImageView>

        <Button
            android:id="@+id/add_s_button"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:text="ADD NEW">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginTop="90dp">


        <ImageView
            android:id="@+id/logout_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="120dp"
            android:src="@drawable/white_button_logout">
        </ImageView>

    </LinearLayout>

</LinearLayout>